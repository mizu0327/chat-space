.side-bar
  .side-bar__header
    .side-bar__header__box
      .side-bar__header__box__user-name
        = current_user.name
      .side-bar__header__box__menu
        =link_to new_group_path do
          = icon('fa', 'edit', class: "side-bar__header__box__menu--new_group")
          %span<>
        =link_to edit_user_path(current_user) do
          = icon('fa', 'cog', class: "side-bar__header__box__menu--edit_user")
          %span<>

  .side-bar__groups
    - current_user.group.each do |group|
      .side-bar__groups__group
        = link_to group_messages_path(group) do
        .side-bar__groups__group--name
          = group.name
        .side-bar__groups__group--latest-message
          メッセージはまだありません

